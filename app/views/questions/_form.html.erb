<h3>Add a question:</h3>
<%= form_for([@quiz, @quiz.questions.build]) do |question_form| %>
	<div class="field">
		<%= question_form.label :title %><br />
		<%= question_form.text_field :title %>
	</div>

	<%= question_form.fields_for :answers do |answer_form| %>
	  <div class="field">
	    <%= answer_form.label :result %><br />
	    <%= answer_form.text_field :result %>
	  </div>
	<% end %>

  <div class="actions">
	  <%= question_form.submit %>
	</div>
<% end %>
